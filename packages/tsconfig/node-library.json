{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node Library",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2020",
      "ES2015.Collection",
      "ES2015.Iterable",
      "ES2015.Promise",
      "ES2015.Symbol"
    ],
    "outDir": "dist",
    "sourceMap": true
  }
}
